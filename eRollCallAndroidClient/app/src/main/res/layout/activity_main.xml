<?xml version="1.0" encoding="utf-8"?>

<!--加入一个关于我们按钮-->
<!--修改：李鹏鹏-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudntActivity">

    <!--学生端签到按钮-->
    <Button
        android:id="@+id/sign_flag"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="18.0dip"
        android:layout_marginRight="18.0dip"
        android:background="@drawable/button_style_student_01"
        android:singleLine="true"
        android:fontFamily="微软雅黑"
        android:textColor="#ffffffff"
        android:textSize="23.0sp"
        android:layout_marginTop="10dp"
        android:onClick="Signed"
        android:text="签到" />

    <!--学生端摇一摇按钮-->
    <Button
        android:id="@+id/Shake"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="18.0dip"
        android:layout_marginRight="18.0dip"
        android:background="@drawable/button_style_student_02"
        android:singleLine="true"
        android:fontFamily="微软雅黑"
        android:textColor="#ffffffff"
        android:textSize="23.0sp"
        android:layout_marginTop="10dp"
        android:text="摇一摇" />

    <!--学生端查看个人信息按钮-->
    <Button
        android:id="@+id/sign"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="18.0dip"
        android:layout_marginRight="18.0dip"
        android:background="@drawable/button_style_student_03"
        android:singleLine="true"
        android:fontFamily="微软雅黑"
        android:textColor="#ffffffff"
        android:textSize="23.0sp"
        android:layout_marginTop="10dp"
        android:onClick="ViewInfo"
        android:text="查看个人信息" />

    <!--学生端关于我们按钮-->
    <Button
        android:id="@+id/about_us"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="18.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_style_student_04"
        android:singleLine="true"
        android:fontFamily="微软雅黑"
        android:textColor="#ffffffff"
        android:textSize="23.0sp"
        android:layout_marginTop="10dp"
        android:text="关于剑心工作室"/>


</LinearLayout>
